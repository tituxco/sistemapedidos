
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <TextView
        android:text="TAREAS LOCALES"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />
    <Button
        android:text="VER CLIENTES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincVerClientes" />
    <Button
        android:text="VER PRODUCTOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincVerProductos" />
    <Button
        android:text="VER PEDIDOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincVerPedidos" />
    <Button
        android:text="ESTADISTICAS DE VENTA (ALFA)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincVerEstadisticas"
        android:visibility="invisible"/>
    <TextView
        android:text="TAREAS DE SINCRONIZACION"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <Button
        android:text="Sincronizar clientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincSincroClie" />

    <Button
        android:text="sincronizar productos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincSincProd" />

    <Button
        android:text="sincronizar listas de precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincSincListasPrecio" />

    <Button
        android:text="Configuraciones varias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincManejoTablas" />
    <Button
        android:text="Actualizar APP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrincActualizarApp" />
    <TextView
        android:text="Version de aplicaciÃ³n: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appInfo" />
<TextView
        android:text="Vendedor: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/infoVendedor" />
</LinearLayout >